    <ListView android:id="@+id/fault_reference"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@android:drawable/dialog_holo_dark_frame"
        />
        -->
</LinearLayout>